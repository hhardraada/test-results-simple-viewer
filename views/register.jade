html
  head
    include ./includes/head.jade
  body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Please register
            .panel-body
              form(role='form', action='/signup', method='POST')
                fieldset
                  .form-group
                    input.form-control(placeholder='Username', name='username', type='username', autofocus='')
                  .form-group
                    input.form-control(placeholder='Email', name='email', type='email', autofocus='')
                  .form-group
                    input.form-control(placeholder='Password', name='password', type='password', value='')
                  a(href='/', class='text-center new-account') Login
                  button.btn.btn-lg.btn-success.btn-block(type='submit') Sign up
            if message
                h4.text-center.error-message #{message}